<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_rml"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/logorml_10" />

    <TextView
        android:id="@+id/tv_rml_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_rml"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_rml_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_rml_1"
        android:layout_below="@+id/tv_rml_1"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp" />

    <!--
    <View
        android:id="@+id/vw_divider"
        android:layout_alignLeft="@+id/tv_rml_1"
        android:layout_below="@+id/tv_rml_2"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"/>
        -->

</RelativeLayout>